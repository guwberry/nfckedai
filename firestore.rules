rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: only the owner can read or write their profile
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      // Admin-only delete (optional)
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Repairs collection
    match /repairs/{id} {
      // Public kiosk: allow unauthenticated 'get' by docId (UID) so customers can scan
      allow get: if true;
      // List (query) only allowed for authenticated users
      allow list: if request.auth != null;
      // Create/Update only allowed for authenticated technicians
      allow create, update: if request.auth != null;
      allow delete: if false; // prevent deletion via clients
    }
  }
}
